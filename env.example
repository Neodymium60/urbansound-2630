# Image publishing
TAG=0.1.0
REGISTRY=localhost:32000

# Kubernetes target
NAMESPACE=urbansound
NODE_NAME=pi-ndr

# Recorder hardware
MIC_DEVICE=plughw:3,0    # from `arecord -l`

# Classifier options
USE_TPU=false            # set true if Coral USB is attached and passed through

# Storage on the Pi (USB stick mount)
USB_MOUNT=/mnt/urbansound
PVC_SIZE=7Gi

# Optional site metadata (used by classifier if you wire it in)
SITE_ID=cooma-east

